<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication
    x:Class="Covid_Info.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms">
    <Application.Resources>

        <OnPlatform x:Key="FABrands" x:TypeArguments="x:String">
            <On Platform="Android" Value="FontAwesomeFreeBrands.otf#Brands" />
            <On Platform="iOS" Value="FontAwesomeFreeBrands" />
        </OnPlatform>

        <OnPlatform x:Key="FASolid" x:TypeArguments="x:String">
            <On Platform="Android" Value="FontAwesomeFreeSolid.otf#Solid" />
            <On Platform="iOS" Value="FontAwesomeFreeSolid" />
        </OnPlatform>

        <OnPlatform x:Key="FARegular" x:TypeArguments="x:String">
            <On Platform="Android" Value="FontAwesomeFreeRegular.otf#Regular" />
            <On Platform="iOS" Value="FontAwesomeFreeRegular" />
        </OnPlatform>

        <!--  my frame font color and backgoundpage color  -->
        <Color x:Key="FrameFontColor">#EEF4F7</Color>

        <!--  Colors  -->
        <Color x:Key="ActiveColor">#607d8b</Color>
        <Color x:Key="ConfirmedColor">#00bcd4</Color>
        <Color x:Key="RecoveredColor">#4caf50</Color>
        <Color x:Key="DeathsColor">#f44336</Color>
        <Color x:Key="BaseFontColor">#000a12</Color>
        <Color x:Key="BaseWhiteColor">#eef1f6</Color>
        <Color x:Key="WhiteColor">#FFFFFF</Color>
        <Color x:Key="BaseBlueColor">#0026ca</Color>
        <Color x:Key="BackgroundColorPage">#eceff1</Color>
        <Color x:Key="CustomNavBarColor">#1a1d3e</Color>
        <Color x:Key="BoxSeparator">#b0bec5</Color>

        <Color x:Key="PrimaryColor">#4d6cfa</Color>
        <Color x:Key="PrimaryLightColor">#8a9aff</Color>
        <Color x:Key="PrimaryDarkColor">#0042c6</Color>

        <Color x:Key="SecundaryColor">#263238</Color>
        <Color x:Key="SecundaryDarkColor">#000a12</Color>
        <Color x:Key="SecundaryLightColor">#4f5b62</Color>

        <!--  Font sizes  -->
        <x:Double x:Key="MainNumbFS">25</x:Double>
        <x:Double x:Key="BaseTitleFontSize">20</x:Double>

        <!--  Page backgrouncolor  -->
        <Style x:Key="PageStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="#eceff1" />
        </Style>

        <!--  navbarstyle  -->
        <!--<Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="#4d6cfa" />
        </Style>-->

        <!--  My own titles  -->
        <!--<x:Double x:Key="BaseTitleFontSize">20</x:Double>
        <Color x:Key="BlueDColorBase">#1072a3</Color>
        <Color x:Key="NavBarTextColor">#eef1f6</Color>-->

    </Application.Resources>
</prism:PrismApplication>