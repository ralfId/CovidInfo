<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Covid_Info.Views.DevInfo"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:Covid_Info.Helpers"
    xmlns:i18n="clr-namespace:Resx;assembly=Resx"
    xmlns:pkv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{StaticResource BackgroundColorPage}">

    <ScrollView Padding="20,15">
        <Grid RowDefinitions="auto, auto, auto" RowSpacing="30">

            <!--  About Developer  -->
            <Frame Grid.Row="0">
                <Grid RowDefinitions="auto, auto">
                    <Grid Grid.Row="0" RowDefinitions="auto, auto, auto">
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            Text="{i18n:Translate devInfo1}"
                            TextColor="{StaticResource SecundaryDarkColor}" />
                        <Label
                            Grid.Row="1"
                            FontSize="Body"
                            TextColor="{StaticResource SecundaryDarkColor}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{i18n:Translate devInfo2}" />
                                    <Span Text="&#10;" />
                                    <Span Text="&#10;" />
                                    <Span Text="{i18n:Translate devInfo3}" />
                                    <Span Text="&#10;" />
                                    <Span Text="&#10;" />
                                    <Span Text="{i18n:Translate devInfo4}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Grid Grid.Row="2" ColumnDefinitions="auto,*">
                            <Label
                                FontFamily="{StaticResource FARegular}"
                                FontSize="30"
                                Text="&#xf0e0;"
                                TextColor="{StaticResource SecundaryDarkColor}" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontSize="Body"
                                Text="ralf_raid@outlook.es"
                                TextColor="{StaticResource SecundaryDarkColor}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </Grid>

                    <Grid
                        Grid.Row="1"
                        Margin="0,15,0,5"
                        ColumnDefinitions="auto, *"
                        RowDefinitions="auto, auto"
                        RowSpacing="0"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            FontSize="Body"
                            HorizontalOptions="CenterAndExpand"
                            Text="{i18n:Translate greatApp}"
                            TextColor="{StaticResource SecundaryDarkColor}" />
                        <Image
                            Grid.Row="1"
                            Grid.Column="0"
                            Aspect="AspectFit"
                            HeightRequest="70"
                            HorizontalOptions="End"
                            Source="{helpers:ImageResource Covid_Info.Images.coffeecup.png}" />
                        <Frame
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="15,10"
                            BackgroundColor="{StaticResource SecundaryDarkColor}"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Body"
                                HorizontalOptions="Center"
                                Text="{i18n:Translate buyCoffee}"
                                TextColor="{StaticResource WhiteColor}"
                                VerticalOptions="Center" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GotoPaypalMe}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                    </Grid>
                </Grid>
            </Frame>


            <!--  About API Data  -->
            <Frame Grid.Row="1">
                <Grid RowDefinitions="auto, auto,auto">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        Text="{i18n:Translate dataInfo1}"
                        TextColor="{StaticResource SecundaryDarkColor}" />
                    <Label
                        Grid.Row="1"
                        FontSize="Body"
                        TextColor="{StaticResource SecundaryDarkColor}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{i18n:Translate dataInfo2}" />
                                <Span Text="&#10;" />
                                <Span Text="&#10;" />
                                <Span Text="{i18n:Translate dataInfo3}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Frame
                        Grid.Row="2"
                        Padding="15,10"
                        BackgroundColor="{StaticResource SecundaryDarkColor}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Body"
                            HorizontalOptions="Center"
                            Text="{i18n:Translate dataInfoBtn}"
                            TextColor="{StaticResource WhiteColor}"
                            VerticalOptions="Center" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goNovelCovidApi}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </Frame>


            <!--  About Freepik images  -->
            <Frame Grid.Row="2">
                <Grid RowDefinitions="auto, auto">
                    <Label TextColor="{StaticResource SecundaryDarkColor}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="Body" Text="{i18n:Translate imgVector}" />
                                <Span Text=" " />
                                <Span
                                    FontAttributes="Bold"
                                    FontSize="Subtitle"
                                    Text="{i18n:Translate byFreepik}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Frame Grid.Row="1" Padding="5">
                        <Image Aspect="AspectFit" Source="{helpers:ImageResource Covid_Info.Images.freepik.png}" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToFreepikCommand}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>