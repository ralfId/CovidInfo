<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:prism="http://prismlibrary.com"
                 xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" 
                 xmlns:Icons="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
                 xmlns:pkv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
                 xmlns:i18n="clr-namespace:Resx;assembly=Resx" 
                 xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
                 prism:ViewModelLocator.AutowireViewModel="True"
                 x:Class="Covid_Info.Views.ExternalInfo"
                 Visual="Material">
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
            PositionIn="Center"
            PositionOut="Bottom"
            ScaleIn="1.2"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>
    
    <pkv:PancakeView  BackgroundColor="{StaticResource BackgroundColorPage}"  CornerRadius="10,10,0,0"  HasShadow="True" Margin="0,10,0,0" >
        <pkv:PancakeView.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Down" />
        </pkv:PancakeView.GestureRecognizers>
        
        <StackLayout>

            <pkv:PancakeView Padding="10" HasShadow="True" >
                <pkv:PancakeView BackgroundColor="{StaticResource BaseFontColor}" HeightRequest="5" WidthRequest="70" HorizontalOptions="Center" CornerRadius="20"/>
                <pkv:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseCountryDetails}"/>
                </pkv:PancakeView.GestureRecognizers>
            </pkv:PancakeView>
            <pkv:PancakeView BackgroundColor="red" Padding="5">

                <Label Text="{i18n:Translate officialInformation}" 
                           FontSize="Large"
                           FontAttributes="Bold"
                           TextColor="{StaticResource WhiteColor}"
                           HorizontalOptions="Center"/>
            </pkv:PancakeView>
            <ScrollView Margin="15,5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <!--ELSALVADOR INFO-->
                    <Frame Grid.Row="0" BackgroundColor="{StaticResource WhiteColor}" Opacity="0.9" Padding="10" IsVisible="{Binding IsVisibleGOES}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                               Text="{i18n:Translate goesInfo}"
                               FontSize="Body"
                               TextColor="{StaticResource BaseFontColor}"
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>
                            <Icons:IconLabel Grid.Column="1"
                               Text="fas-arrow-circle-right"
                               FontSize="Large"
                               FontAttributes="Bold"
                               TextColor="{StaticResource BaseFontColor}"
                               HorizontalOptions="End"/>
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goSVCovidInfo}"/>
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!--Q&A-->
                    <Frame Grid.Row="1" BackgroundColor="{StaticResource WhiteColor}" Opacity="0.9" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                               Text="Preguntas y respuestas sobre la enfermedad por coronavirus (COVID-19)"
                               FontSize="Body"
                               TextColor="{StaticResource BaseFontColor}"
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>
                            <Icons:IconLabel Grid.Column="1"
                               Text="fas-arrow-circle-right"
                               FontSize="Large"
                               FontAttributes="Bold"
                               TextColor="{StaticResource BaseFontColor}"
                               HorizontalOptions="End"/>
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goWHOCovidFaqs}"/>
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!--WHO DONATIONS-->
                    <Frame Grid.Row="2" BackgroundColor="{StaticResource WhiteColor}" Opacity="0.9" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                               Text="Donar al fondo de Respuesta a la COVID-19"
                               FontSize="Body"
                               TextColor="{StaticResource BaseFontColor}"
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>
                            <Icons:IconLabel Grid.Column="1"
                               Text="fas-arrow-circle-right"
                               FontSize="Large"
                               FontAttributes="Bold"
                               TextColor="{StaticResource BaseFontColor}"
                               HorizontalOptions="End"/>
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goWHODonations}"/>
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!--WHO COVID MYTHS-->
                    <Frame Grid.Row="3" BackgroundColor="{StaticResource WhiteColor}" Opacity="0.9" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                               Text="Consejos para la población acerca de los rumores sobre el nuevo coronavirus"
                               FontSize="Body"
                               TextColor="{StaticResource BaseFontColor}"
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>
                            <Icons:IconLabel Grid.Column="1"
                               Text="fas-arrow-circle-right"
                               FontSize="Large"
                               FontAttributes="Bold"
                               TextColor="{StaticResource BaseFontColor}"
                               HorizontalOptions="End"/>
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goCovidWHOMyths}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </ScrollView>
        </StackLayout>

    </pkv:PancakeView>

</pages:PopupPage>